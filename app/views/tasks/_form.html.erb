

<div class ="flex-row d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card mt-5">
        <div class="card-body">
            <%= form_for @task do |f| %>

                <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
                </div>

                <div class="form-group">
            <%= f.label :content%>
            <%= f.text_area :content, class: 'form-control'%>
                </div>

                <div class="form-group">
                    <%= f.label :datum %>
                    <%= f.datetime_select :start_time, class: 'form-control'%>
                </div>

                

                

            <%= f.submit "Post", class: 'btn btn-outline-primary'%>
            <%= link_to  "Back", tasks_path, class: 'btn btn-outline-secondary' %>
        <% end %>
        </div>
    </div>
    </div>
    
    

</div>