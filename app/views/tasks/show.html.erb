
<div class="container-fluid mt-3">
<h3><%= @task.title%></h3>

<a>Post by: <%= @task.user.email.to_s %></a>
<p>Navodilo naloge: <%= @task.content %></p>
<p>Ocenjevanje: <%= @task.ocenjevanje %></p>
<p>Razred: <%= @task.group.name %></p>
<p>Do: <%=  @task.start_time %></p>

<span>
<%= link_to "Uredi", edit_task_path(@task.id), class: 'btn btn-primary'%>
<%= link_to "Nazaj", tasks_path, class: 'btn btn-secondary' %><br><br>
<a style="display: inline"><%= button_to "Delete", task_path(@task.id), method: :delete, class: 'btn btn-danger' %>

</span>
</div>